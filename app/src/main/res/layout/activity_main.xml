<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/n1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="621dp"
        android:ems="10"
        android:inputType="number"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="35dp" />

    <EditText
        android:id="@+id/n2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="76dp"
        android:layout_marginEnd="82dp"
        android:layout_marginBottom="553dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintTop_toTopOf="@+id/n1"
        tools:layout_editor_absoluteX="100dp" />


    <Button
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="231dp"

        android:layout_marginLeft="200dp"
        android:layout_marginTop="90dp"

        android:layout_marginEnd="23dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="357dp"
        android:backgroundTint="#8495F6"
        android:shadowColor="#3F51B5"


        android:text="Add"
        android:textColorHint="#3F51B5"

        android:textSize="24sp"
        app:rippleColor="#3F51B5"
        app:strokeColor="#3F51B5"
        tools:layout_editor_absoluteX="295dp" />

    <TextView
        android:id="@+id/res"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="473dp"
        android:text="Resultat"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/sub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/add"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="250dp"
        android:layout_marginEnd="210dp"
        android:layout_marginBottom="357dp"
        android:backgroundTint="#8AF68E"
        android:text="SUB"
        android:textSize="24sp" />

    <Button
        android:id="@+id/div"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="23dp"
        android:layout_marginLeft="220dp"
        android:layout_marginEnd="230dp"
        android:layout_marginBottom="277dp"
        android:backgroundTint="#F8EB75"
        android:text="DIV"
        android:textSize="24sp" />

    <Button
        android:id="@+id/mul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="228dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="274dp"
        android:backgroundTint="#F67268"
        android:text="MUL"
        android:textSize="24sp" />

</RelativeLayout>